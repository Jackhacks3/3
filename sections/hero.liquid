            <span class="feature-text">163 Languages</span>
          </div>
          <div class="feature-item">
            <span class="feature-icon">üéØ</span>
            <span class="feature-text">98% Accuracy</span>
          </div>
          <div class="feature-item">
            <span class="feature-icon">‚ö°</span>
            <span class="feature-text">0.5s Response</span>
          </div>
          <div class="feature-item">
            <span class="feature-icon">üîã</span>
            <span class="feature-text">50H Battery</span>
          </div>
        </div>
      {% endif %}

      <!-- Action Buttons -->
      <div class="hero-buttons">
        {% if section.settings.button_primary_text != blank %}
          <a href="{{ section.settings.button_primary_url | default: '#product' }}" 
             class="btn btn-primary hero-btn-primary">
            {{ section.settings.button_primary_text }}
          </a>
        {% endif %}

        {% if section.settings.button_secondary_text != blank %}
          <a href="{{ section.settings.button_secondary_url | default: '#specifications' }}" 
             class="btn btn-secondary hero-btn-secondary">
            {{ section.settings.button_secondary_text }}
          </a>
        {% endif %}
      </div>

      <!-- Trust Indicators with Urgency -->
      {% if section.settings.show_trust_indicators %}
