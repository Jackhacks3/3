      {% endif %}

      <!-- Social Proof -->
      {% if section.settings.show_social_proof %}
        <div class="social-proof">
          <div class="proof-item">
            <span class="proof-number">{{ section.settings.customers_served | default: '50,000' }}+</span>
            <span class="proof-text">Happy Customers</span>
