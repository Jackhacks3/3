          <div class="trust-item">
            <span class="trust-icon">‚úì</span>
            <span>Free Worldwide Shipping</span>
          </div>
          <div class="trust-item">
            <span class="trust-icon">‚úì</span>
            <span>1 Year Warranty</span>
          </div>
          <div class="trust-item">
            <span class="trust-icon">‚úì</span>
            <span>30-Day Money Back</span>
          </div>
        </div>
      {% endif %}

      <!-- Urgency & Scarcity -->
      {% if section.settings.show_urgency %}
        <div class="urgency-banner">
          {% if section.settings.stock_count > 0 %}
            <div class="stock-indicator">
              <span class="stock-icon">‚ö°</span>
              <strong>Only {{ section.settings.stock_count }} left in stock!</strong>
            </div>
          {% endif %}
          
          {% if section.settings.sale_end_date != blank %}
            <div class="countdown-timer" data-end-date="{{ section.settings.sale_end_date }}">
              <span class="timer-label">Sale ends in:</span>
              <div class="timer-display">
                <span class="timer-unit">
                  <span class="timer-number" id="days">00</span>
                  <span class="timer-text">Days</span>
                </span>
                <span class="timer-unit">
                  <span class="timer-number" id="hours">00</span>
                  <span class="timer-text">Hours</span>
                </span>
                <span class="timer-unit">
                  <span class="timer-number" id="minutes">00</span>
                  <span class="timer-text">Min</span>
                </span>
              </div>
            </div>
          {% endif %}
