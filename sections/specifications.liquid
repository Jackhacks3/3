{% comment %}
  Translation Earbud Store - Specifications Section
  Features: Technical Specifications in Card Layout
{% endcomment %}

{% assign section_id = section.id %}

<section class="specifications section section-{{ section.type }}" 
         id="specifications"
         data-section-id="{{ section_id }}"
         style="
           background-color: {{ section.settings.background_color }};
           color: {{ section.settings.text_color }};
           padding-top: {{ section.settings.padding_top }}px;
           padding-bottom: {{ section.settings.padding_bottom }}px;
           text-align: {{ section.settings.text_alignment }};
         ">
  
  <div class="container">
    
    <!-- Section Header -->
    {% if section.settings.heading != blank %}
      <h2 class="section-heading">
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    {% if section.settings.description != blank %}
      <div class="section-description">
        {{ section.settings.description }}
      </div>
    {% endif %}

    <!-- Specifications Grid -->
    <div class="spec-grid">
      
      <!-- Languages Specification -->
      <div class="spec-card">
        <div class="spec-icon">üåç</div>
        <div class="spec-value">163</div>
        <div class="spec-label">Languages Supported</div>
        <div class="spec-detail">Real-time translation between 163 languages worldwide</div>
      </div>

      <!-- Accuracy Specification -->
      <div class="spec-card">
        <div class="spec-icon">üéØ</div>
        <div class="spec-value">98%</div>
        <div class="spec-label">Translation Accuracy</div>
        <div class="spec-detail">Industry-leading precision with AI technology</div>
      </div>

      <!-- Response Time Specification -->
      <div class="spec-card">
        <div class="spec-icon">‚ö°</div>
        <div class="spec-value">0.5s</div>
        <div class="spec-label">Response Time</div>
        <div class="spec-detail">Ultra-fast processing for natural conversations</div>
      </div>

      <!-- Battery Life Specification -->
      <div class="spec-card">
        <div class="spec-icon">üîã</div>
        <div class="spec-value">50H</div>
        <div class="spec-label">Total Battery Life</div>
        <div class="spec-detail">Extended usage with charging case included</div>
      </div>

      <!-- Playback Time Specification -->
      <div class="spec-card">
        <div class="spec-icon">üéµ</div>
        <div class="spec-value">8H</div>
        <div class="spec-label">Continuous Playback</div>
        <div class="spec-detail">Single charge provides 8 hours of usage</div>
      </div>

      <!-- Charging Specification -->
      <div class="spec-card">
        <div class="spec-icon">üîå</div>
        <div class="spec-value">Type-C</div>
        <div class="spec-label">Fast Charging</div>
        <div class="spec-detail">Quick charge via USB Type-C port</div>
      </div>

      <!-- Offline Languages Specification -->
      <div class="spec-card">
        <div class="spec-icon">üì±</div>
        <div class="spec-value">8</div>
        <div class="spec-label">Offline Languages</div>
        <div class="spec-detail">Works without internet for major languages</div>
      </div>

      <!-- Subscription Specification -->
      <div class="spec-card">
        <div class="spec-icon">üéÅ</div>
        <div class="spec-value">1 Year</div>
        <div class="spec-label">Subscription Included</div>
        <div class="spec-detail">Premium features included for full year</div>
      </div>

    </div>
  </div>
</section>

<style>
  .specifications {
    background: white;
  }

  .section-heading {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .section-description {
    font-size: 1.2rem;
    color: #6b7280;
    margin-bottom: 3rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .spec-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  .spec-card {
    background: white;
    padding: 2.5rem 2rem;
    border-radius: 16px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
    text-align: center;
    transition: all 0.3s ease;
    border: 1px solid #f3f4f6;
    position: relative;
    overflow: hidden;
  }

  .spec-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
  }

  .spec-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.15);
  }

  .spec-icon {
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    font-size: 2rem;
    box-shadow: 0 8px 25px rgba(59, 130, 246, 0.3);
  }

  .spec-value {
    font-size: 2.5rem;
    font-weight: 800;
    color: var(--primary-color);
    margin-bottom: 0.5rem;
    line-height: 1;
  }

  .spec-label {
    font-size: 1.1rem;
    font-weight: 600;
    color: #374151;
    margin-bottom: 1rem;
  }

  .spec-detail {
    font-size: 0.95rem;
    color: #6b7280;
    line-height: 1.5;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .spec-grid {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1.5rem;
    }

    .spec-card {
      padding: 2rem 1.5rem;
    }

    .spec-icon {
      width: 60px;
      height: 60px;
      font-size: 1.5rem;
    }

    .spec-value {
      font-size: 2rem;
    }
  }

  @media (max-width: 480px) {
    .spec-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

{% schema %}
{
  "name": "Specifications",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Technical Specifications"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover the powerful technology behind our AI translation earbuds with industry-leading specifications."
    },
    {
      "type": "header",
      "content": "Appearance"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#1f2937"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {"value": "left", "label": "Left"},
        {"value": "center", "label": "Center"},
        {"value": "right", "label": "Right"}
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 60
    }
  ],
  "presets": [
    {
      "name": "Specifications"
    }
  ]
}
{% endschema %} 