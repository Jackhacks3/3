{% comment %}
  Translation Earbud Store - Footer Section
  Features: Company Info, Links, Social Media, Contact
{% endcomment %}

{% assign section_id = section.id %}

<footer class="footer section-{{ section.type }}" 
        data-section-id="{{ section_id }}"
        style="
          background-color: {{ section.settings.background_color }};
          color: {{ section.settings.text_color }};
          padding-top: {{ section.settings.padding_top }}px;
          padding-bottom: {{ section.settings.padding_bottom }}px;
        ">
  
  <div class="container">
    <div class="footer-content">
      
      <!-- Company Information -->
      <div class="footer-section company-info">
        <div class="footer-logo">
          {% if section.settings.logo != blank %}
            <img src="{{ section.settings.logo | img_url: '150x' }}" 
                 alt="{{ shop.name | escape }}"
                 width="auto"
                 height="40"
                 loading="lazy">
          {% else %}
            <h3 class="logo-text">{{ section.settings.company_name | default: shop.name }}</h3>
          {% endif %}
        </div>
        
        {% if section.settings.company_description != blank %}
          <p class="company-description">
            {{ section.settings.company_description }}
          </p>
        {% endif %}

        <!-- Social Media Links -->
        {% if section.settings.show_social_links %}
          <div class="social-links">
            {% if section.settings.facebook_url != blank %}
              <a href="{{ section.settings.facebook_url }}" 
                 target="_blank" 
                 rel="noopener noreferrer"
                 aria-label="Facebook">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </a>
            {% endif %}

            {% if section.settings.twitter_url != blank %}
              <a href="{{ section.settings.twitter_url }}" 
                 target="_blank" 
                 rel="noopener noreferrer"
                 aria-label="Twitter">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                </svg>
              </a>
            {% endif %}

            {% if section.settings.instagram_url != blank %}
              <a href="{{ section.settings.instagram_url }}" 
                 target="_blank" 
                 rel="noopener noreferrer"
                 aria-label="Instagram">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.62 5.367 11.987 11.988 11.987 6.62 0 11.987-5.367 11.987-11.987C24.014 5.367 18.637.001 12.017.001zM8.449 16.988c-1.297 0-2.448-.596-3.197-1.536L12.017 8.2l6.765 7.252c-.749.94-1.9 1.536-3.197 1.536H8.449z"/>
                </svg>
              </a>
            {% endif %}
          </div>
        {% endif %}
      </div>

      <!-- Quick Links -->
      <div class="footer-section">
        <h4 class="footer-heading">Quick Links</h4>
        <nav class="footer-nav">
          {% for link in linklists[section.settings.footer_menu].links %}
            <a href="{{ link.url }}" class="footer-link">
              {{ link.title }}
            </a>
          {% endfor %}
        </nav>
      </div>

      <!-- Contact Information -->
      <div class="footer-section">
        <h4 class="footer-heading">Contact</h4>
        <div class="contact-info">
          {% if section.settings.email != blank %}
            <div class="contact-item">
              <span class="contact-icon">üìß</span>
              <a href="mailto:{{ section.settings.email }}" class="contact-link">
                {{ section.settings.email }}
              </a>
            </div>
          {% endif %}

          {% if section.settings.phone != blank %}
            <div class="contact-item">
              <span class="contact-icon">üìû</span>
              <a href="tel:{{ section.settings.phone }}" class="contact-link">
                {{ section.settings.phone }}
              </a>
            </div>
          {% endif %}

          {% if section.settings.address != blank %}
            <div class="contact-item">
              <span class="contact-icon">üìç</span>
              <span>{{ section.settings.address }}</span>
            </div>
          {% endif %}
        </div>
      </div>

      <!-- Newsletter Signup -->
      {% if section.settings.show_newsletter %}
        <div class="footer-section newsletter">
          <h4 class="footer-heading">Stay Updated</h4>
          <p class="newsletter-description">Get the latest updates on new features and special offers.</p>
          <form class="newsletter-form" action="/contact#newsletter" method="post">
            <input type="hidden" name="form_type" value="customer">
            <input type="hidden" name="utf8" value="‚úì">
            <div class="newsletter-input-group">
              <input type="email" 
                     name="contact[email]" 
                     placeholder="Enter your email"
                     class="newsletter-input"
                     required>
              <button type="submit" class="newsletter-btn">Subscribe</button>
            </div>
          </form>
        </div>
      {% endif %}
    </div>

    <!-- Footer Bottom -->
    <div class="footer-bottom">
      <div class="footer-bottom-content">
        <p class="copyright">
          ¬© {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.
        </p>
        
        {% if section.settings.show_payment_icons %}
          <div class="payment-icons">
            <span class="payment-icon">üí≥</span>
            <span class="payment-icon">üîí</span>
            <span class="payment-text">Secure Payment</span>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: #1f2937;
    color: white;
  }

  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .footer-section {
    display: flex;
    flex-direction: column;
  }

  .company-info {
    max-width: 300px;
  }

  .footer-logo .logo-text {
    font-size: 1.5rem;
    font-weight: 700;
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 1rem;
  }

  .company-description {
    color: #9ca3af;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-links a {
    color: #9ca3af;
    transition: color 0.3s ease;
    padding: 0.5rem;
    border-radius: 8px;
    background: rgba(255, 255, 255, 0.05);
  }

  .social-links a:hover {
    color: var(--primary-color);
    background: rgba(255, 255, 255, 0.1);
  }

  .footer-heading {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: white;
  }

  .footer-nav {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer-link {
    color: #9ca3af;
    text-decoration: none;
    transition: color 0.3s ease;
    padding: 0.25rem 0;
  }

  .footer-link:hover {
    color: var(--primary-color);
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: #9ca3af;
  }

  .contact-icon {
    font-size: 1.2rem;
    width: 24px;
    text-align: center;
  }

  .contact-link {
    color: inherit;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .contact-link:hover {
    color: var(--primary-color);
  }

  .newsletter {
    max-width: 300px;
  }

  .newsletter-description {
    color: #9ca3af;
    margin-bottom: 1rem;
    line-height: 1.5;
  }

  .newsletter-input-group {
    display: flex;
    gap: 0.5rem;
    flex-direction: column;
  }

  .newsletter-input {
    padding: 0.75rem 1rem;
    border: 1px solid #374151;
    border-radius: 8px;
    background: #374151;
    color: white;
    font-size: 0.95rem;
  }

  .newsletter-input::placeholder {
    color: #9ca3af;
  }

  .newsletter-input:focus {
    outline: none;
    border-color: var(--primary-color);
  }

  .newsletter-btn {
    padding: 0.75rem 1.5rem;
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    color: white;
    border: none;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .newsletter-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(59, 130, 246, 0.3);
  }

  .footer-bottom {
    border-top: 1px solid #374151;
    padding-top: 2rem;
  }

  .footer-bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .copyright {
    color: #9ca3af;
    font-size: 0.9rem;
  }

  .payment-icons {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #9ca3af;
    font-size: 0.9rem;
  }

  .payment-icon {
    font-size: 1.2rem;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .company-info,
    .newsletter {
      max-width: none;
      margin: 0 auto;
    }

    .footer-bottom-content {
      flex-direction: column;
      text-align: center;
    }

    .newsletter-input-group {
      max-width: 300px;
      margin: 0 auto;
    }
  }
</style>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "header",
      "content": "Company Information"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo image"
    },
    {
      "type": "text",
      "id": "company_name",
      "label": "Company name",
      "default": "Translation Earbuds"
    },
    {
      "type": "textarea",
      "id": "company_description",
      "label": "Company description",
      "default": "Breaking language barriers with innovative AI translation technology."
    },
    {
      "type": "header",
      "content": "Navigation"
    },
    {
      "type": "link_list",
      "id": "footer_menu",
      "label": "Footer menu",
      "default": "footer"
    },
    {
      "type": "header",
      "content": "Contact Information"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email address",
      "default": "support@translationearbuds.com"
    },
    {
      "type": "text",
      "id": "phone",
      "label": "Phone number",
      "default": "+1 (555) 123-4567"
    },
    {
      "type": "textarea",
      "id": "address",
      "label": "Address",
      "default": "123 Innovation Drive, Tech City, TC 12345"
    },
    {
      "type": "header",
      "content": "Social Media"
    },
    {
      "type": "checkbox",
      "id": "show_social_links",
      "label": "Show social media links",
      "default": true
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "twitter_url",
      "label": "Twitter URL"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    },
    {
      "type": "header",
      "content": "Newsletter"
    },
    {
      "type": "checkbox",
      "id": "show_newsletter",
      "label": "Show newsletter signup",
      "default": true
    },
    {
      "type": "header",
      "content": "Features"
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "Show payment icons",
      "default": true
    },
    {
      "type": "header",
      "content": "Appearance"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#1f2937"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 30
    }
  ]
}
{% endschema %} 