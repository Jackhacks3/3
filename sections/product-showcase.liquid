{% comment %}
  Translation Earbud Store - Product Showcase Section
  Features: Product Image, Pricing, Features List, Add to Cart
{% endcomment %}

{% assign section_id = section.id %}
{% assign product_price = section.settings.product_price | default: 99.99 %}

<section class="product-showcase section section-{{ section.type }}" 
         id="product"
         data-section-id="{{ section_id }}"
         style="
           background-color: {{ section.settings.background_color }};
           padding-top: {{ section.settings.padding_top }}px;
           padding-bottom: {{ section.settings.padding_bottom }}px;
         ">
  
  <div class="container">
    <div class="product-grid">
      
      <!-- Product Images Gallery -->
      <div class="product-image-gallery">
        {% if section.settings.product_image_1 != blank %}
          <div class="main-product-image">
            <img src="{{ section.settings.product_image_1 | img_url: '800x' }}" 
                 srcset="{{ section.settings.product_image_1 | img_url: '400x' }} 400w,
                         {{ section.settings.product_image_1 | img_url: '600x' }} 600w,
                         {{ section.settings.product_image_1 | img_url: '800x' }} 800w"
                 sizes="(max-width: 768px) 100vw, 50vw"
                 alt="{{ section.settings.product_title | default: 'AI Translation Earbuds' | escape }}"
                 loading="lazy"
                 id="main-product-image">
          </div>

          <!-- Thumbnail Gallery -->
          {% if section.settings.product_image_2 != blank or section.settings.product_image_3 != blank or section.settings.product_image_4 != blank %}
            <div class="product-thumbnails">
              <button class="thumbnail active" onclick="changeMainImage('{{ section.settings.product_image_1 | img_url: '800x' }}', this)">
                <img src="{{ section.settings.product_image_1 | img_url: '100x' }}" alt="Product view 1">
              </button>
              
              {% if section.settings.product_image_2 != blank %}
                <button class="thumbnail" onclick="changeMainImage('{{ section.settings.product_image_2 | img_url: '800x' }}', this)">
                  <img src="{{ section.settings.product_image_2 | img_url: '100x' }}" alt="Product view 2">
                </button>
              {% endif %}
              
              {% if section.settings.product_image_3 != blank %}
                <button class="thumbnail" onclick="changeMainImage('{{ section.settings.product_image_3 | img_url: '800x' }}', this)">
                  <img src="{{ section.settings.product_image_3 | img_url: '100x' }}" alt="Product view 3">
                </button>
              {% endif %}
              
              {% if section.settings.product_image_4 != blank %}
                <button class="thumbnail" onclick="changeMainImage('{{ section.settings.product_image_4 | img_url: '800x' }}', this)">
                  <img src="{{ section.settings.product_image_4 | img_url: '100x' }}" alt="Product view 4">
                </button>
              {% endif %}
            </div>
          {% endif %}

          <!-- Product Badge -->
          {% if section.settings.show_product_badge %}
            <div class="product-badge">
              {{ section.settings.product_badge_text | default: 'New' }}
            </div>
          {% endif %}
        {% else %}
          <div class="placeholder-image">
            <span>üéß</span>
            <p>Product Images</p>
          </div>
        {% endif %}
      </div>

      <!-- Product Details -->
      <div class="product-details">
        
        <!-- Product Title -->
        <h2 class="product-title">
          {{ section.settings.product_title | default: 'AI Translation Earbuds' }}
        </h2>

        <!-- Product Price -->
        <div class="product-price">
          ${{ product_price | round: 2 }}
        </div>

        <!-- Product Description -->
        {% if section.settings.product_description != blank %}
          <div class="product-description">
            {{ section.settings.product_description }}
          </div>
        {% endif %}

        <!-- Product Features -->
        <ul class="product-features">
          <li>Real-time translation in 163 languages</li>
          <li>98% translation accuracy</li>
          <li>0.5s ultra-fast response time</li>
          <li>50H total battery life</li>
          <li>8H continuous playback per charge</li>
          <li>Fast Type-C charging</li>
          <li>8 offline languages included</li>
          <li>One year subscription included</li>
        </ul>

        <!-- Quantity and Add to Cart -->
        <div class="product-actions">
          <div class="quantity-selector">
            <label for="quantity" class="quantity-label">Quantity:</label>
            <div class="quantity-controls">
              <button class="quantity-btn quantity-decrease" aria-label="Decrease quantity">-</button>
              <input type="number" 
                     id="quantity" 
                     class="quantity-input" 
                     value="1" 
                     min="1" 
                     max="10"
                     aria-label="Quantity">
              <button class="quantity-btn quantity-increase" aria-label="Increase quantity">+</button>
            </div>
          </div>

          <button class="btn btn-primary add-to-cart" 
                  data-price="{{ product_price }}"
                  data-title="{{ section.settings.product_title | default: 'AI Translation Earbuds' }}"
                  aria-label="Add to cart">
            Add to Cart - ${{ product_price | round: 2 }}
          </button>
        </div>

        <!-- Trust Badges -->
        {% if section.settings.show_trust_badges %}
          <div class="trust-badges">
            <div class="badge">
              <span class="badge-icon">üöö</span>
              <span>Free Shipping</span>
            </div>
            <div class="badge">
              <span class="badge-icon">üõ°Ô∏è</span>
              <span>1 Year Warranty</span>
            </div>
            <div class="badge">
              <span class="badge-icon">üí∞</span>
              <span>30-Day Returns</span>
            </div>
            <div class="badge">
              <span class="badge-icon">üîí</span>
              <span>Secure Checkout</span>
            </div>
          </div>
        {% endif %}

        <!-- Money-Back Guarantee -->
        {% if section.settings.show_guarantee %}
          <div class="guarantee-section">
            <div class="guarantee-badge">
              <span class="guarantee-icon">üíØ</span>
              <div class="guarantee-text">
                <strong>{{ section.settings.guarantee_title | default: '30-Day Money-Back Guarantee' }}</strong>
                <p>{{ section.settings.guarantee_description | default: 'Not satisfied? Return for a full refund within 30 days.' }}</p>
              </div>
            </div>
          </div>
        {% endif %}
      </div>
    </div>

    <!-- As Seen In Section -->
    {% if section.settings.show_media_mentions %}
      <div class="media-mentions">
        <h3 class="mentions-title">{{ section.settings.mentions_title | default: 'As Featured In' }}</h3>
        <div class="mentions-grid">
          {% if section.settings.mention_logo_1 %}
            <div class="mention-item">
              <img src="{{ section.settings.mention_logo_1 | img_url: '150x' }}" alt="{{ section.settings.mention_name_1 | escape }}" loading="lazy">
            </div>
          {% endif %}
          {% if section.settings.mention_logo_2 %}
            <div class="mention-item">
              <img src="{{ section.settings.mention_logo_2 | img_url: '150x' }}" alt="{{ section.settings.mention_name_2 | escape }}" loading="lazy">
            </div>
          {% endif %}
          {% if section.settings.mention_logo_3 %}
            <div class="mention-item">
              <img src="{{ section.settings.mention_logo_3 | img_url: '150x' }}" alt="{{ section.settings.mention_name_3 | escape }}" loading="lazy">
            </div>
          {% endif %}
          {% if section.settings.mention_logo_4 %}
            <div class="mention-item">
              <img src="{{ section.settings.mention_logo_4 | img_url: '150x' }}" alt="{{ section.settings.mention_name_4 | escape }}" loading="lazy">
            </div>
          {% endif %}
        </div>
      </div>
    {% endif %}

    <!-- Use Cases Section -->
    {% if section.settings.show_use_cases %}
      <div class="use-cases">
        <h3 class="use-cases-title">{{ section.settings.use_cases_title | default: 'Perfect For Every Situation' }}</h3>
        <div class="use-cases-grid">
          <div class="use-case-item">
            <div class="use-case-icon">‚úàÔ∏è</div>
            <h4>Travel & Tourism</h4>
            <p>Navigate foreign countries with confidence. Order food, ask for directions, and connect with locals effortlessly.</p>
          </div>
          <div class="use-case-item">
            <div class="use-case-icon">üíº</div>
            <h4>Business Meetings</h4>
            <p>Break language barriers in international conferences, client meetings, and business negotiations.</p>
          </div>
          <div class="use-case-item">
            <div class="use-case-icon">üéì</div>
            <h4>Education & Learning</h4>
            <p>Perfect for language students, international classrooms, and academic research collaborations.</p>
          </div>
          <div class="use-case-item">
            <div class="use-case-icon">üë®‚Äçüë©‚Äçüëß‚Äçüë¶</div>
            <h4>Family & Friends</h4>
            <p>Connect with multilingual family members, help elderly relatives, and include everyone in conversations.</p>
          </div>
        </div>
      </div>
    {% endif %}
      </div>
    </div>
  </div>
</section>

<style>
  .product-showcase {
    background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  }

  .product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 3rem;
    align-items: center;
  }

  .product-image-gallery {
    text-align: center;
    position: relative;
  }

  .main-product-image {
    margin-bottom: 1rem;
    position: relative;
  }

  .main-product-image img {
    max-width: 100%;
    height: auto;
    border-radius: 16px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
    transition: transform 0.3s ease;
  }

  .main-product-image img:hover {
    transform: scale(1.02);
  }

  .product-thumbnails {
    display: flex;
    gap: 0.75rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .thumbnail {
    border: 2px solid #e5e7eb;
    border-radius: 8px;
    padding: 0;
    background: none;
    cursor: pointer;
    transition: all 0.3s ease;
    overflow: hidden;
  }

  .thumbnail:hover {
    border-color: var(--primary-color);
    transform: translateY(-2px);
  }

  .thumbnail.active {
    border-color: var(--primary-color);
    box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.2);
  }

  .thumbnail img {
    width: 80px;
    height: 80px;
    object-fit: cover;
    display: block;
  }

  .product-badge {
    position: absolute;
    top: 15px;
    right: 15px;
    background: linear-gradient(135deg, var(--accent-color), var(--primary-color));
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 600;
    z-index: 2;
  }

  .placeholder-image {
    background: #f3f4f6;
    border-radius: 16px;
    padding: 4rem 2rem;
    text-align: center;
    color: #6b7280;
  }

  .placeholder-image span {
    font-size: 4rem;
    display: block;
    margin-bottom: 1rem;
  }

  .product-title {
    font-size: clamp(1.75rem, 3vw, 2.5rem);
    font-weight: 700;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .product-price {
    font-size: 2.5rem;
    font-weight: 800;
    color: var(--accent-color);
    margin: 1.5rem 0;
  }

  .product-description {
    font-size: 1.1rem;
    line-height: 1.7;
    color: #4b5563;
    margin-bottom: 2rem;
  }

  .product-features {
    list-style: none;
    margin: 2rem 0;
    padding: 0;
  }

  .product-features li {
    display: flex;
    align-items: center;
    padding: 0.75rem 0;
    border-bottom: 1px solid rgba(0, 0, 0, 0.08);
    font-weight: 500;
  }

  .product-features li:before {
    content: '‚úì';
    background: linear-gradient(135deg, var(--accent-color), var(--primary-color));
    color: white;
    border-radius: 50%;
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 1rem;
    font-weight: bold;
    font-size: 0.875rem;
    flex-shrink: 0;
  }

  .product-actions {
    margin: 2rem 0;
  }

  .quantity-selector {
    margin-bottom: 1.5rem;
  }

  .quantity-label {
    display: block;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: #374151;
  }

  .quantity-controls {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    width: fit-content;
  }

  .quantity-btn {
    background: var(--primary-color);
    color: white;
    border: none;
    width: 40px;
    height: 40px;
    border-radius: 8px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
    font-weight: 600;
    transition: all 0.2s ease;
  }

  .quantity-btn:hover {
    background: var(--secondary-color);
    transform: scale(1.05);
  }

  .quantity-input {
    width: 80px;
    height: 40px;
    text-align: center;
    border: 2px solid #e5e7eb;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: 600;
    color: #374151;
  }

  .quantity-input:focus {
    outline: none;
    border-color: var(--primary-color);
  }

  .add-to-cart {
    width: 100%;
    padding: 1.25rem 2rem;
    font-size: 1.1rem;
    font-weight: 700;
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    border: none;
    border-radius: 12px;
    color: white;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 10px 30px rgba(59, 130, 246, 0.3);
  }

  .add-to-cart:hover {
    transform: translateY(-2px);
    box-shadow: 0 15px 40px rgba(59, 130, 246, 0.4);
  }

  .trust-badges {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin-top: 2rem;
  }

  .badge {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    background: white;
    border-radius: 8px;
    border: 1px solid #e5e7eb;
    font-size: 0.9rem;
    font-weight: 500;
    color: #374151;
  }

  .badge-icon {
    font-size: 1.2rem;
  }

  /* Guarantee Section */
  .guarantee-section {
    margin-top: 2rem;
    padding: 1.5rem;
    background: linear-gradient(135deg, rgba(16, 185, 129, 0.1), rgba(34, 197, 94, 0.1));
    border-radius: 12px;
    border: 2px solid rgba(16, 185, 129, 0.2);
  }

  .guarantee-badge {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .guarantee-icon {
    font-size: 3rem;
    flex-shrink: 0;
  }

  .guarantee-text strong {
    display: block;
    font-size: 1.2rem;
    color: #059669;
    margin-bottom: 0.5rem;
  }

  .guarantee-text p {
    margin: 0;
    opacity: 0.8;
  }

  /* Media Mentions */
  .media-mentions {
    margin-top: 4rem;
    text-align: center;
    padding: 3rem 0;
    background: linear-gradient(135deg, #f8fafc, #e2e8f0);
    border-radius: 16px;
  }

  .mentions-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 2rem;
    color: #6b7280;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .mentions-grid {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 3rem;
    flex-wrap: wrap;
  }

  .mention-item {
    opacity: 0.6;
    transition: opacity 0.3s ease;
    filter: grayscale(100%);
  }

  .mention-item:hover {
    opacity: 1;
    filter: grayscale(0%);
  }

  .mention-item img {
    max-height: 60px;
    width: auto;
  }

  /* Use Cases */
  .use-cases {
    margin-top: 4rem;
    text-align: center;
  }

  .use-cases-title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 3rem;
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .use-cases-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .use-case-item {
    padding: 2rem;
    background: white;
    border-radius: 16px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .use-case-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.15);
  }

  .use-case-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .use-case-item h4 {
    font-size: 1.3rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--text-color);
  }

  .use-case-item p {
    line-height: 1.6;
    color: #6b7280;
    margin: 0;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .product-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .trust-badges {
      justify-content: center;
    }

    .thumbnail img {
      width: 60px;
      height: 60px;
    }

    .guarantee-badge {
      flex-direction: column;
      text-align: center;
      gap: 1rem;
    }

    .mentions-grid {
      gap: 2rem;
    }

    .mention-item img {
      max-height: 40px;
    }

    .use-cases-grid {
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1.5rem;
    }

    .use-case-item {
      padding: 1.5rem;
    }
  }
</style>

<script>
  function changeMainImage(imageSrc, thumbnailElement) {
    // Update main image
    const mainImage = document.getElementById('main-product-image');
    if (mainImage) {
      mainImage.src = imageSrc;
    }
    
    // Update active thumbnail
    const thumbnails = document.querySelectorAll('.thumbnail');
    thumbnails.forEach(thumb => thumb.classList.remove('active'));
    thumbnailElement.classList.add('active');
  }
</script>

