{% comment %}
  Translation Earbud Store - Hero Section
  Features: Gradient Background, Customizable Content, CTA Buttons
{% endcomment %}

{% assign section_id = section.id %}
{% assign heading_text = section.settings.heading | default: 'Revolutionary AI Translation Earbuds' %}
{% assign description_text = section.settings.description | default: 'Break language barriers instantly with real-time translation in 163 languages. Experience crystal-clear communication with 98% accuracy and lightning-fast 0.5s response time.' %}

<section class="hero section-large section-{{ section.type }}" 
         data-section-id="{{ section_id }}"
         style="
           padding-top: {{ section.settings.padding_top }}px;
           padding-bottom: {{ section.settings.padding_bottom }}px;
           text-align: {{ section.settings.text_alignment }};
         ">
  
  <!-- Background Elements -->
  {% if section.settings.background_image != blank %}
    <div class="hero-background">
      <img src="{{ section.settings.background_image | img_url: '1920x' }}" 
           alt=""
           loading="eager"
           style="opacity: {{ section.settings.background_opacity | divided_by: 100.0 }};">
    </div>
  {% endif %}

  <div class="container">
    <div class="hero-content">
      
      <!-- Main Heading -->
      {% if heading_text != blank %}
        <h1 class="hero-heading">
          {{ heading_text }}
        </h1>
      {% endif %}

      <!-- Description -->
      {% if description_text != blank %}
        <div class="hero-description">
          {{ description_text }}
        </div>
      {% endif %}

      <!-- Key Features -->
      {% if section.settings.show_features %}
        <div class="hero-features">
          <div class="feature-item">
            <span class="feature-icon">üåç</span>
            <span class="feature-text">163 Languages</span>
          </div>
          <div class="feature-item">
            <span class="feature-icon">üéØ</span>
            <span class="feature-text">98% Accuracy</span>
          </div>
          <div class="feature-item">
            <span class="feature-icon">‚ö°</span>
            <span class="feature-text">0.5s Response</span>
          </div>
          <div class="feature-item">
            <span class="feature-icon">üîã</span>
            <span class="feature-text">50H Battery</span>
          </div>
        </div>
      {% endif %}

      <!-- Action Buttons -->
      <div class="hero-buttons">
        {% if section.settings.button_primary_text != blank %}
          <a href="{{ section.settings.button_primary_url | default: '#product' }}" 
             class="btn btn-primary hero-btn-primary">
            {{ section.settings.button_primary_text }}
          </a>
        {% endif %}

        {% if section.settings.button_secondary_text != blank %}
          <a href="{{ section.settings.button_secondary_url | default: '#specifications' }}" 
             class="btn btn-secondary hero-btn-secondary">
            {{ section.settings.button_secondary_text }}
          </a>
        {% endif %}
      </div>

      <!-- Trust Indicators -->
      {% if section.settings.show_trust_indicators %}
        <div class="hero-trust">
          <div class="trust-item">
            <span class="trust-icon">‚úì</span>
            <span>Free Worldwide Shipping</span>
          </div>
          <div class="trust-item">
            <span class="trust-icon">‚úì</span>
            <span>1 Year Warranty</span>
          </div>
          <div class="trust-item">
            <span class="trust-icon">‚úì</span>
            <span>30-Day Money Back</span>
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</section>

<style>
  .hero {
    background: linear-gradient(135deg, 
      {{ section.settings.gradient_color_1 | default: '#3b82f6' }} 0%, 
      {{ section.settings.gradient_color_2 | default: '#06b6d4' }} 100%);
    color: {{ section.settings.text_color | default: '#ffffff' }};
    position: relative;
    overflow: hidden;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse"><path d="M 10 0 L 0 0 0 10" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="0.5"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
    opacity: 0.3;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .hero-background img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    max-width: 800px;
    margin: 0 auto;
  }

  .hero-heading {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 800;
    margin-bottom: 1.5rem;
    line-height: 1.1;
    animation: slideInUp 1s ease-out;
  }

  .hero-description {
    font-size: clamp(1.1rem, 2vw, 1.3rem);
    margin-bottom: 2rem;
    opacity: 0.95;
    line-height: 1.6;
    animation: slideInUp 1s ease-out 0.2s both;
  }

  .hero-features {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 1rem;
    margin: 2rem 0;
    animation: slideInUp 1s ease-out 0.3s both;
  }

  .feature-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(255, 255, 255, 0.1);
    padding: 1rem;
    border-radius: 12px;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .feature-icon {
    font-size: 1.5rem;
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .feature-text {
    font-weight: 600;
    font-size: 0.95rem;
  }

  .hero-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    margin: 2.5rem 0;
    animation: slideInUp 1s ease-out 0.4s both;
  }

  .hero-btn-primary {
    background: rgba(255, 255, 255, 0.95);
    color: {{ section.settings.gradient_color_1 | default: '#3b82f6' }};
    font-weight: 700;
    padding: 1.2rem 2.5rem;
    font-size: 1.1rem;
  }

  .hero-btn-primary:hover {
    background: white;
    transform: translateY(-3px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
  }

  .hero-btn-secondary {
    background: transparent;
    color: white;
    border: 2px solid rgba(255, 255, 255, 0.8);
    font-weight: 600;
    padding: 1.2rem 2.5rem;
    font-size: 1.1rem;
  }

  .hero-btn-secondary:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: white;
  }

  .hero-trust {
    display: flex;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
    opacity: 0.9;
    animation: slideInUp 1s ease-out 0.5s both;
  }

  .trust-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.95rem;
    font-weight: 500;
  }

  .trust-icon {
    background: rgba(16, 185, 129, 0.9);
    color: white;
    border-radius: 50%;
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.75rem;
    font-weight: bold;
  }

  /* Animations */
  @keyframes slideInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .hero-features {
      grid-template-columns: repeat(2, 1fr);
    }

    .hero-buttons {
      flex-direction: column;
      align-items: center;
    }

    .hero-btn-primary,
    .hero-btn-secondary {
      width: 100%;
      max-width: 280px;
    }

    .hero-trust {
      flex-direction: column;
      gap: 1rem;
    }
  }

  @media (max-width: 480px) {
    .hero-features {
      grid-template-columns: 1fr;
    }

    .feature-item {
      justify-content: center;
    }
  }
</style>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Revolutionary AI Translation Earbuds"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Break language barriers instantly with real-time translation in 163 languages. Experience crystal-clear communication with 98% accuracy and lightning-fast 0.5s response time."
    },
    {
      "type": "text",
      "id": "button_primary_text",
      "label": "Primary button text",
      "default": "Shop Now - $99.99"
    },
    {
      "type": "url",
      "id": "button_primary_url",
      "label": "Primary button URL"
    },
    {
      "type": "text",
      "id": "button_secondary_text",
      "label": "Secondary button text",
      "default": "View Specifications"
    },
    {
      "type": "url",
      "id": "button_secondary_url",
      "label": "Secondary button URL"
    },
    {
      "type": "header",
      "content": "Features"
    },
    {
      "type": "checkbox",
      "id": "show_features",
      "label": "Show key features",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_trust_indicators",
      "label": "Show trust indicators",
      "default": true
    },
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "color",
      "id": "gradient_color_1",
      "label": "Gradient color 1",
      "default": "#3b82f6"
    },
    {
      "type": "color",
      "id": "gradient_color_2",
      "label": "Gradient color 2",
      "default": "#06b6d4"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "range",
      "id": "background_opacity",
      "label": "Background image opacity",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "%",
      "default": 30
    },
    {
      "type": "header",
      "content": "Appearance"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {"value": "left", "label": "Left"},
        {"value": "center", "label": "Center"},
        {"value": "right", "label": "Right"}
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "min": 0,
      "max": 150,
      "step": 10,
      "unit": "px",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 150,
      "step": 10,
      "unit": "px",
      "default": 80
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %} 